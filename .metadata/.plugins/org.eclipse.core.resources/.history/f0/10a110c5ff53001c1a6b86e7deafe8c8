package array;

public class Q26 {

	public static void main(String[] args) {

		int a[]= {3,7,90,20,50,40};
			int k=3;
			int sum=0;
			int min=Integer.MAX_VALUE;
		for (int i = 0; i < a.length-2; i++) 
		{
			for (int j = 0; j<i+k; j++)
			{
				sum=sum+a[j];
			}
			System.out.println(sum);
			double avg=(sum*1.0)/k;
			if(avg<min)
			{
			System.out.println(avg);
			}
		}
	}

}
