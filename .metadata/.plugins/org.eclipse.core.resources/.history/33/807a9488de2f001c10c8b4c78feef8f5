package Assignment;

public class spattern6 {

	public static void main(String[] args) {

      loopi(0);
	}

	private static void loopi(int i)
	{
         		if(i<9)
         			
         		{
         			loopj(i,0);
         			System.out.println();
         			i++;
         			loopi(i);
         		}
	}

	private static void loopj(int i, int j) {
          
		if(i<5)
		{
			if(j-i<=0 && j+i<=8)
				System.out.print("*");
			else
				System.out.print(" ");
			j++;
			loopj(i,j);
		}
	}

}
