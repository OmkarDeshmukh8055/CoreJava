package Assignment;


public class Spattern3 {

	public static void main(String[] args)
	{
		
		loopi(0);
		
 	}

	private static void loopi(int i) 
	{
           if(i<5)
           {
        	   loopj(i,0);
        	
        	  i++;
        	  loopi(i);
           }
	}

	private static void loopj(int i, int j) 
	{
		 if(j<5)
		 {
			 if(j+i<=4)
				 System.out.print("*");
			 else
			 System.out.print(" ");
				 j++;
				 loopj(i, j);
		 }
			 
	}

}
