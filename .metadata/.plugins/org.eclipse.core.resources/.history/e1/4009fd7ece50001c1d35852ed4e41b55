package ArraysQuestions;

import java.util.Arrays;

public class SlectionSorting {

	public static void main(String[] args) 
	{
	  int a[]= {1,3,4,9,5};
	 
	  	for (int i = 0; i < a.length; i++) 
	  	{	
	  		int min=i;
			for (int j = i+1; j < a.length-1; j++) 
			{
				if(a[min]>a[j])
				{
					min=j;
				}
			}
			a[i]=a[min];
		}
		System.out.println(Arrays.toString(a));
	}

}
